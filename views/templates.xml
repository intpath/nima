<odoo>
    <data>

<template inherit_id="web.external_layout_standard" id="custom_nuboogh_layout">
        <xpath expr="//div[@t-att-style='report_header_style']//div[1]" position="replace">          
          
            <div class="row" style="width: 100%; direction:rtl;" id="row_header">
             			<!-- START OF THE HEADER DIV  -->

	        	<div align="right" class="col-4"  style="width: 50%;">
                 <div class="row">
                   <div class="col-3"><img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="min-height: 100px; max-height: 100px;" alt="Logo"/></div>
                   <div class="col-8 mt16"><h3 class="header_line"> Nima Form <p>+964790 1948 624</p></h3></div>
                    </div>
                </div>


              <div class="col-4" align="center"  style="width: 50%;">
                  <h3 align="center"> شركة مروج الزمرد </h3>
                  <p class="header_line text-nowrap">       
                  للتجارة العامة و صناعة مواد التعبئة و التغليف المحدودة 
                        <br/>                                           
                        العبيدي الصناعية
                        <br/>
                        بغداد - العراق
                        
                        </p>
                   </div>

           
            
            
            
              <div class="col-4 box1" id="date_div" align="left" style="width: 50%;">
                                
                                <div style="border:solid 1px black; width:50%; padding:4px;">
                                  <div    t-if="report_type == 'pdf'">  
                                          الصفحة 
                                    <span class="page"/> / <span class="topage"/>
                                  </div>
                                  
                                  <div id="inside_date_div">
                                       <p id="p_date">التاريخ 
                                      <span t-field="o.create_date"/> 
                                      </p>                
                                   </div>
                                </div>

                       </div>
               </div>
            </xpath>


              
                <xpath expr="div [@t-attf-class='footer o_standard_footer o_company_#{company.id}_layout']//div//ul" position="replace">

                            <div class="row" style="padding:4px;">

                              <div class="col-3"><img src="nima/static/src/img/4.jpeg" style="min-width:80%;   max-height:70px; max-width:80%;" /></div> 

                              <div class="col-3"><img src="nima/static/src/img/1.jpeg" style="min-width:80%;   max-height:70px; max-width:80%;" /></div>

                              <div class="col-3"><img src="nima/static/src/img/2.jpeg" style="min-width:80%;   max-height:70px; max-width:80%;" /></div>

                              <div class="col-3"><img src="nima/static/src/img/3.jpeg" style="min-width:80%;   max-height:70px; max-width:80%;" /></div>

                              </div>
                    </xpath>


       </template>
    </data>
</odoo>